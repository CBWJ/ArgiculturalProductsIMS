
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

<blockquote class="layui-elem-quote quoteBox">

    <div class="layui-inline">
        <div class="layui-input-inline">
            <input type="text" class="layui-input searchVal" id="username" placeholder="请输入搜索的内容">
        </div>
    </div>
    <div class="layui-inline">
        <a class="layui-btn" data-action="search">搜索</a>
    </div>
    <div class="layui-inline">
        <a class="layui-btn layui-btn-normal" data-action="new">新建权限</a>
    </div>
    <div class="layui-inline">
        <a class="layui-btn layui-btn-danger layui-btn-normal" data-action="delBatch">批量删除</a>
    </div>
</blockquote>
<table id="datatable" lay-filter="table"></table>
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<script>
    window.tableConfig = {
        elemSelector: "#datatable",
        tableID: "dt",
        colConfig:  [[{ type: 'checkbox', fixed: 'left' }
                  , { field: 'AName', title: '权限名', sort: true }
                  , { field: 'ACode', title: '权限代码', sort: true }
                  , { field: 'AType', title: '权限类型', sort: true }
                  , { field: 'AIcon', title: '权限图标', sort: true }
                  , { field: 'AIconType', title: '图标类型', sort: true }
                  , { field: 'AClassName', title: '样式类名', sort: true }
                  , { field: 'AShowNumber', title: '显示序号', sort: true }
                  , { field: 'AIsCommon', title: '是否通用', sort: true }
                  , { field: 'IsEnabled', title: '是否启用', sort: true }
                  , { fixed: 'right', width: 120, align: 'center', toolbar: '#barDemo' }//绑定列工具条
                ]],
        dataInterface: "@Url.Action("List", "Authority")"
    };
    window.dataOperation = {
        moreAcive: {},
        createConfig: {
            title: "新建角色",
            url: "@Url.Action("Create", "Authority")"
        },
        deleteConfig: {
            url: "@Url.Action("Delete", "Authority")"
        },
        editConfig: {
            title: "编辑角色",
            url: "@Url.Action("Edit", "Authority")"
        }
    };
</script>