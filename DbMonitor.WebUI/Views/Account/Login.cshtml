@using DbMonitor.Domain;
@model DbMonitor.Domain.User
@{
    Layout = null;
    List<Dictionary> dicSys = (List<Dictionary>)ViewBag.SystemSettings;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <title>Login</title>
    <style>
        body{
            background: #d2d6de;
            background-image: url("../../images/background.png");
            background-size: cover;
        }
        .login-box{
            width: 400px;
            margin: 10% auto;
            border: 1px solid #E30000;
            /*background-color: #fff;*/
            border-radius:5px;
            background-color: rgba(208,208,208,0.8);
        }
        .login-logo{
            font-size: 35px;
            text-align: center;
            font-weight: 300;
            height:100px;
        }
        .login-box-body{
            /*background: #fff;*/
            padding: 20px;
            border-top: 0;
            color: #666;
        }
        .layui-input-block {
            margin-left: 0px;
            min-height: 36px;
        }
        .input-icon {
            position: relative;
        }
        .input-icon-right>.layui-icon{
            position: absolute;
            z-index: 2;
            right: 3px;
            top: 1px;
            line-height: 38px;
            font-size: 20px;
            color: #909090;
        }
        .input-error{
            border-color: #FF5722!important;
        }
        .login-bottom{
            color:#333;
            font-size: 16px;
            text-align: center;
            padding-bottom: 10px;
            margin-top: -10px;
        }
        .login-logo div{
            float:left;
        }
        .login-logo .logo-image{
            width:96px;
            height:100px;
            padding:2px;
        }
        .login-logo .logo-image img{
            width: 90px;
            height: 90px;
        }
        .login-logo .logo-text{
            width:300px;
            height:100px;            
            text-align: center;
            line-height:100px;
            overflow-x:hidden;
            white-space:nowrap;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <div class="login-logo">
            <div class="logo-image">
                <img src="~/images/logo/@dicSys.Where(d=>d.DCode == "Logo").First().DName"/>
            </div>
            <div class="logo-text">
                @dicSys.Where(d => d.DCode == "SystemName").First().DName
            </div>            
        </div>
        <div class="login-box-body">
            <form class="layui-form">
                <div class="layui-form-item">
                    <div class="layui-input-block input-icon input-icon-right">
                        <input type="text" id="ULoginName" name="ULoginName" required lay-verify="required" placeholder="请输入账号" autocomplete="off" class="layui-input"
                               value="@Model.ULoginName">                        
                        <i class="layui-icon layui-icon-username"></i>  
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block input-icon input-icon-right">
                        <input type="password" id="UPassword" name="UPassword" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input"
                               value="@Model.UPassword">
                        <i class="layui-icon layui-icon-password"></i>  
                    </div>
                </div>
                <div class="layui-form-item input-icon">
                    <div class="layui-input-block">
                        <input type="checkbox" name="rememberme" title="记住我">
                        <button type="submit" class="layui-btn layui-layout-right" lay-submit lay-filter="login">登录</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="login-bottom">
            @dicSys.Where(d => d.DCode == "CopyRight").First().DName
        </div>
    </div>
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script>
        layui.use('form', function () {
            var form = layui.form;
            var layer = layui.layer;

            form.on("submit(login)", function (data) {
                //console.log(data.elem) //被执行事件的元素DOM对象，一般为button对象
                //console.log(data.form) //被执行提交的form对象，一般在存在form标签时才会返回
                //console.log(data.field) //当前容器的全部表单字段，名值对形式：{name: value}
                $.post('@Url.Action("Login","Account")', data.field, function (data) {
                    console.log(data);
                    if (data.status != 0) {
                        layer.alert(data.message, { icon: 5 });
                        $("#ULoginName").addClass("input-error");
                        $("#UPassword").addClass("input-error");
                    }
                    else {
                        //layer.alert(data.message, { icon: 1 });
                        window.location.replace("@Url.Action("Index","Home")");
                    }
                }, "json");
                return false; //阻止表单跳转。
            });
        });
    </script>
</body>
</html>
